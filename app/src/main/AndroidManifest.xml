<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="xyz.janficko.moboole">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MoBoole"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MoBooleTheme">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:navigationBarColor="@color/white"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"/>
                <category
                    android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.intro.IntroActivity"/>
        <activity
            android:name=".ui.home.MainActivity"
            android:theme="@style/MoBooleTheme.TransNav"/>
        <activity
            android:name=".ui.home.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/MoBooleTheme"/>
        <activity android:name=".ui.home.UserInfoActivity"/>
        <meta-data
            android:name="net.dean.jraw.REDDIT_USERNAME"
            android:value="am1s"/>
    </application>

</manifest>