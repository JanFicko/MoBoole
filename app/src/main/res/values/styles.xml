<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- OnBoarding screen theme -->
    <style name="OnBoardingTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MoBoole's main theme -->
    <style name="MoBooleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Bottom bar theme -->
    <style name="MoBooleTheme.TransNav" parent="MoBooleTheme" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Text"/>

    <style name="Text.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Black.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Black.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.Black.Huge">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.White.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.White.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.White.Huge">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="Button">
        <item name="android:background">@null</item>
    </style>

</resources>
