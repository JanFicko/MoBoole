<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- OnBoarding screen theme -->
    <style name="OnBoardingTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/onBoardingBackground</item>
        <item name="colorPrimaryDark">@color/onBoardingPrimaryDark</item>
        <item name="colorPrimary">@color/onBoardingPrimary</item>
    </style>

    <!-- MoBoole's main theme -->
    <style name="MoBooleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <!-- Bottom bar theme -->
    <style name="MoBooleTheme.TransNav" parent="MoBooleTheme" />

    <style name="BottomBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/main_bottom_bar_height</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Button's theme -->
    <style name="Button">
        <item name="android:layout_height">@dimen/onboarding_button_height</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Grey">
        <item name="android:background">@drawable/bg_bt_grey</item>
        <item name="android:textAppearance">@style/Text.Indigo.Normal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Text"/>

    <style name="Text.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Black.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Black.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.Black.Huge">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="Text.Grey">
        <item name="android:textColor">@color/grey800</item>
    </style>

    <style name="Text.Grey.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.White.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.White.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.White.Huge">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

    <style name="Text.Indigo">
        <item name="android:textColor">@color/indigo900</item>
    </style>

    <style name="Text.Indigo.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Indigo.Huge">
        <item name="android:textSize">@dimen/text_huge</item>
    </style>

</resources>
